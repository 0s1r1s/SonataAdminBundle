<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- FieldTypes -->
        <service id="sonata.admin.form.type.doctrine_orm.one_to_one" class="Sonata\AdminBundle\Form\ORM\OneToOneType">
            <tag name="form.type" alias="doctrine_orm_one_to_one" />
        </service>

        <service id="sonata.admin.form.type.doctrine_orm.many_to_one" class="Sonata\AdminBundle\Form\ORM\ManyToOneType">
            <tag name="form.type" alias="doctrine_orm_many_to_one" />
        </service>

        <service id="sonata.admin.form.type.doctrine_orm.one_to_many" class="Sonata\AdminBundle\Form\ORM\OneToManyType">
            <tag name="form.type" alias="doctrine_orm_one_to_many" />
        </service>

        <service id="sonata.admin.form.type.doctrine_orm.many_to_many" class="Sonata\AdminBundle\Form\ORM\ManyToManyType">
            <tag name="form.type" alias="doctrine_orm_many_to_many" />
        </service>

        <service id="sonata.admin.form.type.collection" class="Sonata\AdminBundle\Form\Type\CollectionType">
            <tag name="form.type" alias="sonata_admin_collection" />
        </service>

    </services>
</container>
